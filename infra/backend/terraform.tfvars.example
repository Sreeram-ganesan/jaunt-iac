# Example Terraform Variables for Backend Configuration
# Copy this file to terraform.tfvars and update with your values

# S3 bucket name for storing Terraform state
# Must be globally unique across all AWS accounts
state_bucket_name = "your-org-terraform-state-dev"

# DynamoDB table name for state locking
dynamodb_table_name = "terraform-state-lock"

# Environment (dev, staging, prod)
environment = "dev"

# AWS region where resources will be created
aws_region = "us-west-2"

# Example for different environments:
# 
# For development:
# state_bucket_name = "fastapi-terraform-state-dev"
# environment = "dev"
# 
# For production:
# state_bucket_name = "fastapi-terraform-state-prod"
# environment = "prod"